<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">

    <RelativeLayout
        android:layout_width="391dp"
        android:layout_height="715dp"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="16dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/stopRes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="287dp"
            android:layout_marginEnd="136dp"
            android:layout_marginRight="136dp"
            android:clickable="true"
            app:backgroundTint="@color/color1"
            app:srcCompat="@drawable/stop_btn_foreground" />

        <TextView
            android:id="@+id/outputAudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="151dp"
            android:layout_marginEnd="55dp"
            android:layout_marginRight="55dp"
            android:text="Output File.mp3 "
            android:textSize="36sp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/playRes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="287dp"
            android:layout_marginEnd="218dp"
            android:layout_marginRight="218dp"
            android:clickable="true"
            app:backgroundTint="@color/color1"
            app:srcCompat="@drawable/play_btn_foreground" />

        <Button
            android:id="@+id/saveAudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="370dp"
            android:layout_marginEnd="162dp"
            android:layout_marginRight="162dp"
            android:text="save" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="293dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="55dp"
            android:layout_marginRight="55dp"
            android:layout_marginBottom="470dp"
            android:progressBackgroundTint="@color/color1"
            android:progressTint="@color/color1"
            android:thumbTint="@color/color1" />

        <TextView
            android:id="@+id/currentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="300dp"
            android:layout_marginRight="300dp"
            android:layout_marginBottom="446dp"
            android:text="00:00" />

        <TextView
            android:id="@+id/totalTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="445dp"
            android:text="00:30" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>